<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.EventsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="@string/events_header"
        android:textSize="48sp" />

    <Button
        android:id="@+id/back_to_login"
        android:layout_width="132dp"
        android:layout_height="58dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:contentDescription="@string/events_go_back_description"
        android:text="@string/log_out" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNewEventButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/events_add"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_add"
        app:fabSize="auto" />

    <ListView
        android:id="@+id/list_of_events_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="90dp"/>

</FrameLayout>